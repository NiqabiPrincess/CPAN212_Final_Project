<%- include('partials/header', {title: 'Edit Movie'}) %>

<h1>Edit Movie</h1>

<% if (errors && errors.length > 0) { %>
    <% errors.forEach(err => { %>
        <p style="color:red;"><%= err %></p>
    <% }) %>
<% } %>

<form method="POST" action="/movies/<%= movie._id %>/edit">

    <label>Movie Name:</label>
    <input type="text" name="name" value="<%= movie.name %>">

    <label>Description:</label>
    <textarea name="description"><%= movie.description %></textarea>

    <label>Year:</label>
    <input type="number" name="year" value="<%= movie.year %>">

    <label>Genres (comma separated):</label>
    <input type="text" name="genres" value="<%= movie.genres %>">

    <label>Rating (0-10):</label>
    <input type="number" name="rating" value="<%= movie.rating %>">

    <label>Director:</label>
    <input type="text" name="director" value="<%= movie.director %>">

    <button type="submit">Save Changes</button>
</form>

<br>
<a href="/movies/<%= movie._id %>">Cancel</a>

<%- include('partials/footer') %>
